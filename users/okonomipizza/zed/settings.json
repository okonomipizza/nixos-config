{
    "theme": "Ayu Dark",
    "buffer_font_family": "JetBrainsMono Nerd Font",
    "buffer_font_size": 14,
    "ui_font_size": 14,
    "vim_mode": true,
    "tab_size": 4,
    "soft_wrap": "none",
    "telemetry": {
        "diagnostics": false,
        "metrics": false
    },
    "languages": {
        "Erlang": {
            "language_servers": ["elp"]
        }
    },
    "lsp": {
        "elp": {
            "binary": {
                "path": "elp",
                "arguments": ["server"]
            }
        }
    }
}
